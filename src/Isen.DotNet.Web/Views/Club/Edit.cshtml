@{
    ViewData["Title"] = "Edition d'un club";
}
@using Isen.DotNet.Library.Models
@model Club
<h1>Edition d'un club (formulaire)</h1>

<div class="row">
    <div class="col-12">
        
        <form class="form-group" asp-action="Edit">
            
            <input type="hidden" 
                   asp-for="Id"
                   value="@Model?.Id" />

            <div class="form-group">
                <label for="clubName">Nom du club>
                <input id="clubName"
                       type="text"
                       class="form-control"
                       placeholder="Club name"
                       asp-for="Name"
                       value="@Model?.Name" />
            </div>
            
            <div class="form-group">
                <label for="clubZipCode">Code postal</label>
                <input id="clubZipCode"
                       type="text"
                       class="form-control"
                       placeholder="Zip code"
                       asp-for="ZipCode"
                       value="@Model?.ZipCode" />
            </div>

            <button type="submit" class="btn btn-primary">Valider</button>
            <a class="btn btn-secondary"
               asp-controller="Club" asp-action="Index">Annuler</a>

        </form>

    </div>
</div>